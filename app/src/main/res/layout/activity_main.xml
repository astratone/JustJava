<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Quantity"/>
    <Button
        android:id="@+id/bt_increment"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="+"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="@id/tv_quantity"
        app:layout_constraintTop_toBottomOf="@id/tv_quantity"
        android:onClick="increment"/>

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@id/tv_quantity"
        app:layout_constraintTop_toBottomOf="@id/bt_increment"
        />

    <Button
        android:id="@+id/bt_decrement"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="-"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/quantity_text_view"
        app:layout_constraintStart_toStartOf="@id/tv_quantity"
        android:onClick="decrement"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Price"
        app:layout_constraintTop_toBottomOf="@id/bt_decrement"
        />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="R$0,00"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_price"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@android:color/darker_gray"
        android:text="Order"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/price_text_view"
        app:layout_constraintTop_toBottomOf="@id/price_text_view"
        android:onClick="submitOrder"/>


</androidx.constraintlayout.widget.ConstraintLayout>