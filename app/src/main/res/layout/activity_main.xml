<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/name"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_topping"
            style="@style/HeaderTextStyle"
            android:padding="16dp"
            android:text="@string/toppings"
            app:layout_constraintTop_toBottomOf="@id/et_name" />


        <CheckBox
            android:id="@+id/cb_whipped_cream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:paddingLeft="24dp"
            android:text="@string/whipped_cream"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_topping"
            app:layout_constraintTop_toBottomOf="@+id/tv_topping" />

        <CheckBox
            android:id="@+id/cb_chocolate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:paddingLeft="24dp"
            android:text="@string/chocolate"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_topping"
            app:layout_constraintTop_toBottomOf="@+id/cb_whipped_cream" />


        <TextView
            android:id="@+id/tv_quantity"
            style="@style/HeaderTextStyle"
            android:padding="16dp"
            android:text="@string/quantity"
            app:layout_constraintTop_toBottomOf="@+id/cb_chocolate" />

        <LinearLayout
            android:id="@+id/ln_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tv_quantity">

            <Button
                android:id="@+id/bt_decrement"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:onClick="decrement"
                android:text="-"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/tv_quantity" />

            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/tv_quantity"
                app:layout_constraintTop_toBottomOf="@id/bt_increment" />

            <Button
                android:id="@+id/bt_increment"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="increment"
                android:text="+"
                android:textColor="@color/black" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_order_summary"
            style="@style/HeaderTextStyle"
            android:padding="16dp"
            android:text="@string/order_summary"
            app:layout_constraintTop_toBottomOf="@id/ln_horizontal" />

        <TextView
            android:id="@+id/order_summary_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:padding="16dp"
            android:text="R$0,00"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_summary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/order_summary_text_view">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@android:color/darker_gray"
                android:onClick="submitOrder"
                android:text="@string/order"
                android:textColor="@color/black"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:onClick="sendEmail"
                android:text="@string/send_e_mail"
                android:textColor="@color/black" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>